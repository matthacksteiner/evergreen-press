---
import ImageComponent from '@components/ImageComponent.astro';
const {
	global,
	image,
	ratioMobile,
	ratioDesktop,
	span,
	backgroundContainer,
	metadata,
} = Astro.props;
---

<div
	id={metadata?.identifier ?? ''}
	class={`blocks blockImages ${metadata?.classes ?? ''}`}
	{...metadata?.attributes ?? ''}
>
	{
		(
			<ImageComponent
				global={global}
				image={image}
				loading="lazy"
				ratioMobile={ratioMobile}
				ratioDesktop={ratioDesktop}
				backgroundContainer={backgroundContainer}
				span={span}
			/>
		)
	}
</div>
