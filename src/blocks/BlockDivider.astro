---
const {
	global,
	spacingMobileTop,
	spacingMobileBottom,
	spacingDesktopTop,
	spacingDesktopBottom,
} = Astro.props;

const baseSize = 16;
const gridBlockMobile =
	global.gridBlockMobile / baseSize
		? global.gridBlockMobile / baseSize + 'rem'
		: '16px';
const gridBlockDesktop =
	global.gridBlockDesktop / baseSize
		? global.gridBlockDesktop / baseSize + 'rem'
		: '16px';
---

<div class="blockDivider blocks"></div>

<style
	lang="css"
	define:vars={{
		spacingDesktopBottom,
		spacingDesktopTop,
		spacingMobileBottom,
		spacingMobileTop,
		gridBlockMobile,
		gridBlockDesktop,
	}}
>
	.blockDivider {
		@apply !mb-[calc(var(--gridBlockMobile)_*_-1)] !mt-[calc(var(--gridBlockMobile)_*_-1)] pb-[var(--spacingMobileBottom)] pt-[var(--spacingMobileTop)] lg:!mb-[calc(var(--gridBlockDesktop)_*_-1)] lg:!mt-[calc(var(--gridBlockDesktop)_*_-1)] lg:pb-[var(--spacingDesktopBottom)] lg:pt-[var(--spacingDesktopTop)];
	}
</style>
