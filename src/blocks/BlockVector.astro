---
import VectorImage from '@components/VectorImage.astro';
const { image, toggle, link } = Astro.props;
---

<div class={`blockVector blocks`}>
	{
		image && image.url ? (
			toggle ? (
				link.type === 'url' ? (
					<a
						href={link.href}
						target={link.popup ? '_blank' : undefined}
						rel={link.popup ? 'noopener' : undefined}
					>
						<VectorImage image={image} />
					</a>
				) : link.type === 'page' ? (
					<a href={link.hash ? `${link.uri}#${link.hash}` : `${link.uri}`}>
						<VectorImage image={image} />
					</a>
				) : null
			) : (
				<>
					<VectorImage image={image} />
				</>
			)
		) : null
	}
</div>
