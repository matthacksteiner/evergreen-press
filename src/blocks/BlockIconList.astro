---
const { items, font, color, size, align, iconSize, iconGap, iconListGap } =
	Astro.props;
---

<div class="blockIconlist blocks">
	<ul class="list flex flex-col" style={`row-gap: ${iconGap}px`}>
		{
			items.map((item) => (
				<li>
					<a
						href={item.url}
						target="_blank"
						rel="noopener"
						class="link flex"
						style={`column-gap: ${iconListGap}px;`}
						aria-label="icon list item"
					>
						{item.icon && (
							<div
								set:html={item.icon.source}
								class={`icon text--${color}`}
								style={`height: ${iconSize}px; width: ${iconSize}px;`}
							/>
						)}
						<span class={`text font--${size} text--${color} text--${align}`}>
							{item.text}
						</span>
					</a>
				</li>
			))
		}
	</ul>
</div>

<style lang="css" define:vars={{ font }}>
	.blockIconlist {
		font-family: var(--font);
	}
	.link,
	.icon,
	.text {
		@apply flex items-center;
	}
</style>
