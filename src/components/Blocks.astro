const { blocks, global } = Astro.props;
---

{
	blocks ? (
		blocks.map((block) => {
			switch (block.type) {
				case 'block-text':
					return <BlockText text={block.content.text} />;
				default:
					return null;
			}
		})
	) : (
		<section class="container">
			<p>Kein Bl√∂cke gefunden.</p>
		</section>
	)
}
