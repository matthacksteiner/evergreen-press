---
import BlockText from '@blocks/BlockText.astro';
import BlockDivider from '@blocks/BlockDivider.astro';
import BlockImage from '@blocks/BlockImage.astro';
import BlockTitle from '@blocks/BlockTitle.astro';
import BlockImageText from '@blocks/BlockImageText.astro';
const { blocks, data, global } = Astro.props;
---

{
	blocks ? (
		blocks.map((block) => {
			switch (block.type) {
				case 'blockImage':
					return (
						<BlockImage
							images={block.content.images}
							ratio={block.content.ratio}
							layout={block.content.layout}
							align={block.content.align}
							gridGapMobile={global.gridGapMobile + 'px'}
							gridGapDesktop={global.gridGapDesktop + 'px'}
							backgroundContainer={block.content.backgroundcontainer}
							backgroundColor={block.content.backgroundcolor}
							widthMobile={block.content.widthmobile}
							startMobile={block.content.startmobile}
							widthDesktop={block.content.widthdesktop}
							startDesktop={block.content.startdesktop}
							spacingMobileTop={block.content.spacingmobiletop + 'px'}
							spacingMobileBottom={block.content.spacingmobilebottom + 'px'}
							spacingDesktopTop={block.content.spacingdesktoptop + 'px'}
							spacingDesktopBottom={block.content.spacingdesktopbottom + 'px'}
						/>
					);
				case 'blockTitle':
					return (
						<BlockTitle
							title={block.content.title}
							font={block.content.titlefont}
							color={block.content.titlecolor}
							size={block.content.titlesize}
							align={block.content.titlealign}
							Tag={block.content.titletag}
							backgroundContainer={block.content.backgroundcontainer}
							backgroundColor={block.content.backgroundcolor}
							widthMobile={block.content.widthmobile}
							startMobile={block.content.startmobile}
							widthDesktop={block.content.widthdesktop}
							startDesktop={block.content.startdesktop}
							spacingMobileTop={block.content.spacingmobiletop + 'px'}
							spacingMobileBottom={block.content.spacingmobilebottom + 'px'}
							spacingDesktopTop={block.content.spacingdesktoptop + 'px'}
							spacingDesktopBottom={block.content.spacingdesktopbottom + 'px'}
						/>
					);
				case 'blockText':
					return (
						<BlockText
							text={block.content.text}
							font={block.content.textfont}
							color={block.content.textcolor}
							size={block.content.textsize}
							align={block.content.textalign}
							backgroundContainer={block.content.backgroundcontainer}
							backgroundColor={block.content.backgroundcolor}
							widthMobile={block.content.widthmobile}
							startMobile={block.content.startmobile}
							widthDesktop={block.content.widthdesktop}
							startDesktop={block.content.startdesktop}
							spacingMobileTop={block.content.spacingmobiletop + 'px'}
							spacingMobileBottom={block.content.spacingmobilebottom + 'px'}
							spacingDesktopTop={block.content.spacingdesktoptop + 'px'}
							spacingDesktopBottom={block.content.spacingdesktopbottom + 'px'}
						/>
					);
				case 'blockImageText':
					return (
						<BlockImageText
							title={block.content.title}
							titleFont={block.content.titlefont}
							titleColor={block.content.titlecolor}
							titleSize={block.content.titlesize}
							titleAlign={block.content.titlealign}
							TitleTag={block.content.titletag}
							text={block.content.text}
							textFont={block.content.textfont}
							textColor={block.content.textcolor}
							textSize={block.content.textsize}
							textAlign={block.content.textalign}
							image={block.content.image}
							ratio={block.content.ratio}
							gridGapMobile={global.gridGapMobile + 'px'}
							gridGapDesktop={global.gridGapDesktop + 'px'}
							link={block.content.link}
							backgroundContainer={block.content.backgroundcontainer}
							backgroundColor={block.content.backgroundcolor}
							widthMobile={block.content.widthmobile}
							startMobile={block.content.startmobile}
							widthDesktop={block.content.widthdesktop}
							startDesktop={block.content.startdesktop}
							spacingMobileTop={block.content.spacingmobiletop + 'px'}
							spacingMobileBottom={block.content.spacingmobilebottom + 'px'}
							spacingDesktopTop={block.content.spacingdesktoptop + 'px'}
							spacingDesktopBottom={block.content.spacingdesktopbottom + 'px'}
						/>
					);
				case 'blockDivider':
					return (
						<BlockDivider
							spacingMobileTop={block.content.spacingmobiletop + 'px'}
							spacingMobileBottom={block.content.spacingmobilebottom + 'px'}
							spacingDesktopTop={block.content.spacingdesktoptop + 'px'}
							spacingDesktopBottom={block.content.spacingdesktopbottom + 'px'}
						/>
					);

				default:
					return null;
			}
		})
	) : (
		<section class="container">
			<p>Kein Bl√∂cke gefunden.</p>
		</section>
	)
}
