---
import NavLinks from '@components/NavLinks.astro';
const { data, global } = Astro.props;
const logoAlign = global.logoAlign;
---

<div
	class:list={[
		'nav-links--desktop',
		'items-center',
		'hidden',
		'lg:flex',
		'lg:bg-transparent',
		'top-0',
		'left-0',
		'z-10',
		'min-h-full',
		'w-full',
		'justify-center',
		'text-center',
		'opacity-0',
		'transition-opacity',
		'duration-300',
		'ease-in-out',
		'placeholder:pointer-events-none',
		'visible',
		'flex-row',
		'lg:justify-end',
		'lg:opacity-100',
		logoAlign === 'center' ? 'lg:hidden' : '',
	]}
>
	<NavLinks links={global.navHeader} global={global} data={data} />
</div>
