---
import Hamburger from './Hamburger.astro';
import Navigation from './Navigation.astro';
import { Icon } from 'astro-icon';

const { data } = Astro.props;
---

<header
	class="fixed z-10 w-full pt-4 transition-all duration-300 ease-in-out max-md:items-center md:pt-16"
	w
>
	<div class="grid-default container">
		<div
			class="logo z-10 col-span-2 w-full transition-all duration-300 ease-in-out max-md:py-4"
		>
			<a href="/" aria-label="ZurÃ¼ck zur Homepage">
				<Icon name="logo" />
			</a>
		</div>
		<nav
			class="col-span-2 col-start-4 ml-auto justify-end transition-all duration-300 ease-in-out max-lg:self-center lg:col-span-10 lg:col-start-3"
		>
			<Hamburger />
			<Navigation data={data} />
		</nav>
	</div>
