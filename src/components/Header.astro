---
import Hamburger from '@components/Hamburger.astro';
import Navigation from '@components/Navigation.astro';
import { Icon } from 'astro-icon';

const { global } = Astro.props;

const headerColor = global.headerColor;
const headerBackground = global.headerBackground;
const headerColorActive = global.headerColorActive;
const headerBackgroundActive = global.headerBackgroundActive;

const logoDesktop = global.logoDesktop + 'px';
const logoDesktopActive = global.logoDesktopActive + 'px';
const logoMobile = global.logoMobile + 'px';
const logoMobileActive = global.logoMobileActive + 'px';
const logoAlign = global.logoAlign;
const logoFile = global.logoFile;
---

<header
	class={`bg--${headerBackground} text--${headerColor} fixed z-10 w-full py-4 transition-all duration-300 ease-in-out max-md:items-center md:py-8`}
>
	<div class="container flex items-center">
		<div
			id="logo"
			class={`${logoAlign} relative z-10 transition-all duration-300 ease-in-out max-md:py-4 w-80`}
		>
			<a href="/" aria-label="ZurÃ¼ck zur Homepage">
				{
					logoFile.src ? (
						<img
							src={logoFile.src}
							id="logo"
							alt={
								logoFile.alt ? `${logoFile.alt}` : `Logo ${global.siteTitle}`
							}
							class="transition-all duration-300 ease-in-out"
						/>
					) : (
						<Icon
							name="fallback"
							alt={`Logo ${global.siteTitle}`}
							class="w-40 transition-all duration-300 ease-in-out md:w-80"
						/>
					)
				}
			</a>
		</div>
		<nav
			class="justify-end transition-all duration-300 ease-in-out max-md:ml-auto lg:flex-grow"
		>
			<Hamburger />
			<Navigation global={global} />
		</nav>
	</div>
</header>

<script>
	import '../scripts/header.js';
</script>

<style
	lang="css"
	define:vars={{
		headerColorActive,
		headerBackgroundActive,
		logoMobile,
		logoDesktop,
		logoDesktopActive,
		logoMobileActive,
		logoAlign,
	}}
>
	.header--active {
		@apply py-0 shadow-lg lg:py-4;
		background-color: var(--headerBackgroundActive);
		color: var(--headerColorActive);
	}
	.header--active #logo {
		@apply w-[var(--logoMobileActive)] md:w-[var(--logoDesktopActive)];
	}

	#logo {
		@apply w-[var(--logoMobile)] md:w-[var(--logoDesktop)];
	}

	#logo.center {
		@apply left-1/2 -translate-x-1/2;
	}
</style>
