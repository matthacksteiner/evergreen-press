---
import Hamburger from './Hamburger.astro';
import Navigation from './Navigation.astro';
import { Icon } from 'astro-icon';

const { data, global } = Astro.props;

const headerColor = global.headerColor;
const headerBackground = global.headerBackground;
const headerColorActive = global.headerColorActive;
const headerBackgroundActive = global.headerBackgroundActive;
---

<header
	class={`bg-${headerBackground} text-${headerColor} fixed z-10 w-full py-4 transition-all duration-300 ease-in-out max-md:items-center md:py-8`}
>
	<div class="grid-default container items-center">
		<div
			class="logo z-10 col-span-2 w-full transition-all duration-300 ease-in-out max-md:py-4"
		>
			<a href="/" aria-label="ZurÃ¼ck zur Homepage">
				<Icon name="fallback" />
			</a>
		</div>
		<nav
			class="col-span-2 col-start-4 ml-auto justify-end transition-all duration-300 ease-in-out max-lg:self-center lg:col-span-10 lg:col-start-3"
		>
			<Hamburger />
			<Navigation data={data} global={global} />
		</nav>
	</div>
</header>

<script>
	import '../scripts/header.js';
</script>

<style lang="css">
	.header--small {
		@apply py-0 shadow-lg lg:py-4;
	}
	.header--small .logo {
		@apply w-24 opacity-100 lg:w-24;
	}
	.header--small nav {
		@apply self-center;
	}
</style>
