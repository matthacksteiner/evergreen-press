import Picture from '@components/Picture.astro';
const { image, ratioDesktop, ratioMobile, class: className } = Astro.props;
const aspectMobile = ratioMobile.replace('/', ':');
const aspectDesktop = ratioDesktop.replace('/', ':');

const focusX = image.focusX;
const focusY = image.focusY;

let position = '';
if (focusX < 33) {
	position += 'left';
} else if (focusX > 66) {
	position += 'right';
} else {
	position += '';
}

if (focusY < 33) {
	position += ' top';
} else if (focusY > 66) {
	position += ' bottom';
} else {
	position += '';
}

if (position === '') {
	position = 'center';
} else if (position === ' left' || position === ' right') {
	position = position.trim();
}
