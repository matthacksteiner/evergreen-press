---
import Picture from '@components/Picture.astro';
const { image, ratioDesktop, ratioMobile, class: className } = Astro.props;
const aspectMobile = ratioMobile.replace('/', ':');
const aspectDesktop = ratioDesktop.replace('/', ':');
---

<Picture
	src={image.url}
	alt={image.alt}
	widths={[335, 335 * 2]}
	aspectRatio={aspectMobile}
	class={`${className} lg:hidden`}
/>
<Picture
	src={image.url}
	alt={image.alt}
	widths={[430, 900, 1824]}
	aspectRatio={aspectDesktop}
	class={`${className} hidden lg:block`}
/>
